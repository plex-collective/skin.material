	<include name="Clock">
		<control type="label">
			<include condition="!Skin.String(HOME_VIEW,Urban)">ClockTop</include>
			<include condition="Skin.String(HOME_VIEW,Urban)">ClockBottom</include>
			<width>1280</width>
			<align>right</align>
			<font>title1</font>
			<textcolor>Gray</textcolor>
