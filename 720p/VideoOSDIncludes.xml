<?xml version="1.0"?>
<includes>
	<include name="OSDMediaInfo">
		<control type="group">
			<visible>![Window.IsActive(2901)]</visible>

			<!-- Clock -->
			<!-- Missing page heading (well, its greyed out)-->
			<control type="group">
				<description>Header (Clock)</description>
				<control type="image">
					<texture>bg-overlay-header.png</texture>
					<posx>0</posx>
					<posy>0</posy>
					<width>1280</width>
					<height>48</height>
					<visible>true</visible>
				</control>
				<include>Clock</include>
			</control>

			<control type="group" id="52000">
				<posx>78</posx>
				<posy>489</posy>
				<width>1125</width>

				<!--=============================================================================================-->
				<!-- Finish Time -->
				<!--=============================================================================================-->
				<control type="group" id="52002">
					<height>15</height>
					<visible>[VideoPlayer.Content(movies) | VideoPlayer.Content(episodes) | VideoPlayer.Content(tvshows) | VideoPlayer.Content(seasons)]</visible>
					<control type="label">
						<posx>1095</posx>
						<posy>0</posy>
						<width>800</width>
						<align>right</align>
						<aligny>center</aligny>
						<!-- TODO: Localize -->
						<label>Finish Time: $INFO[Player.FinishTime]</label>
						<font>title1</font>
						<textcolor>Gray</textcolor>
						<shadowcolor>Shadow</shadowcolor>
					</control>
				</control>

				<!--=============================================================================================-->
				<!-- Thumbs -->
				<!--=============================================================================================-->
				<control type="group" id="52003">
					<posy>15</posy>
					<height>201</height>
					<!-- Info background -->
					<control type="image">
						<visible>[VideoPlayer.Content(movies) | VideoPlayer.Content(episodes) | VideoPlayer.Content(tvshows) | VideoPlayer.Content(seasons)]</visible>
						<description>Title</description>
						<width>1125</width>
						<height>201</height>
						<texture border="0,1,0,11">osd-bg.png</texture>
					</control>
					<!-- Episode Thumb -->
					<control type="group">
						<visible>[VideoPlayer.Content(episodes)]</visible>
						<description>Episode Thumb and Background</description>
						<control type="image">
							<description>Episode Thumb Background</description>
							<posx>27</posx>
							<posy>24</posy>
							<width>150</width>
							<height>99</height>
							<texture>bg-thumb.png</texture>
						</control>
						<control type="image">
							<description>Poster Thumb Reflection</description>
							<posx>27</posx>
							<posy>122</posy>
							<width>150</width>
							<height>99</height>
							<texture background="true" diffuse="lib-episode-reflection.png" flipy="true">$INFO[VideoPlayer.Cover]</texture>
							<aspectratio scalediffuse="false">scale</aspectratio>
							<fadetime>1</fadetime>
						</control>
						<control type="image">
							<description>Episode Thumb</description>
							<posx>27</posx>
							<posy>24</posy>
							<width>150</width>
							<height>99</height>
							<texture background="true" diffuse="lib-episode-diffuse.png">$INFO[VideoPlayer.Cover]</texture>
							<aspectratio scalediffuse="false">scale</aspectratio>
							<bordertexture>lib-episode-border.png</bordertexture>
							<fadetime>1</fadetime>
						</control>
					</control>
					<!-- Movie, TVShows or Seasons Thumb -->
					<control type="group">
						<visible>[VideoPlayer.Content(movies) | VideoPlayer.Content(tvshows) | VideoPlayer.Content(seasons)]</visible>
						<description>Poster Thumb and Background</description>
						<control type="image">
							<description>Poster Background</description>
							<posx>45</posx>
							<posy>-15</posy>
							<width>114</width>
							<height>171</height>
							<texture>bg-thumb.png</texture>
						</control>
						<control type="image">
							<description>Poster Thumb Reflection</description>
							<posx>45</posx>
							<posy>155</posy>
							<width>114</width>
							<height>171</height>
							<texture background="true" diffuse="lib-poster-reflection.png" flipy="true">$INFO[VideoPlayer.Cover]</texture>
							<aspectratio scalediffuse="false">scale</aspectratio>
							<fadetime>1</fadetime>
						</control>
						<control type="image">
							<description>Poster Thumb</description>
							<posx>45</posx>
							<posy>-15</posy>
							<width>114</width>
							<height>171</height>
							<texture background="true" diffuse="lib-poster-diffuse.png">$INFO[VideoPlayer.Cover]</texture>
							<aspectratio scalediffuse="false">scale</aspectratio>
							<bordertexture>lib-episode-border.png</bordertexture>
							<fadetime>1</fadetime>
						</control>
					</control>
				</control>
				<!--=============================================================================================-->
				<!-- Info -->
				<!--=============================================================================================-->
				<!-- Movies, TvShow, Seasons or Episodes Info -->
				<control type="group">
					<visible>[VideoPlayer.Content(movies) | VideoPlayer.Content(episodes) | VideoPlayer.Content(tvshows) | VideoPlayer.Content(seasons)]</visible>
					<width>912</width>
					<height>150</height>
					<!--=============================================================================================-->
					<control type="group">
						<posx>188</posx>
						<posy>39</posy>
						<width>909</width>
						<height>18</height>
						<!-- Title -->
						<control type="label">
							<description>Title</description>
							<posx>0</posx>
							<posy>0</posy>
							<height>18</height>
							<width min="1" max="798">auto</width>
							<label>$INFO[VideoPlayer.Title]</label>
							<aligny>center</aligny>
							<textcolor>Orange</textcolor>
							<shadowcolor>Shadow</shadowcolor>
							<font>osd</font>
						</control>
						<!-- Image Rating -->
						<control type="image">
							<visible>!IsEmpty(VideoPlayer.Rating)</visible>
							<description>Rating (5 Star) Image</description>
							<posx>102r</posx>
							<posy>0</posy>
							<width>105</width>
							<height>18</height>
							<align>left</align>
							<info>VideoPlayer.StarRating</info>
							<aspectratio aligny="bottom" align="left">keep</aspectratio>
						</control>
					</control>
					<!--=============================================================================================-->
					<control type="group">
						<posx>188</posx>
						<posy>45</posy>
						<width>912</width>
						<height>18</height>
						<control type="group">
							<!-- Movie, TVShows, Seasons Details -->
							<control type="label">
								<visible>[VideoPlayer.Content(movies) | VideoPlayer.Content(tvshows) | VideoPlayer.Content(seasons)]</visible>
								<description>Movie Details</description>
								<posy>3</posy>
								<width min="1" max="600">auto</width>
								<align>left</align>
								<label>$INFO[VideoPlayer.Year]$INFO[VideoPlayer.Genre, &#xB7; ]$INFO[VideoPlayer.mpaa, &#xB7; ]</label>
								<textcolor>White</textcolor>
								<shadowcolor>Shadow</shadowcolor>
								<font>list3</font>
							</control>
							<!-- Episode Details -->
							<control type="label">
								<visible>VideoPlayer.Content(episodes)</visible>
								<description>TV Show Details</description>
								<posy>3</posy>
								<width min="1" max="600">auto</width>
								<align>left</align>
								<label>$INFO[VideoPlayer.Season,,x]$INFO[VideoPlayer.Episode,, &#xB7; ]$INFO[VideoPlayer.TVShowTitle]$INFO[VideoPlayer.Year, &#xB7; ]$INFO[VideoPlayer.Genre, &#xB7; ]$INFO[VideoPlayer.mpaa, &#xB7; ]</label>
								<textcolor>White</textcolor>
								<shadowcolor>Shadow</shadowcolor>
								<font>list3</font>
							</control>
						</control>
						<!-- Text Rating -->
						<!--control type="label">
							<visible>!IsEmpty(VideoPlayer.Rating)</visible>
							<description>Text Rating</description>
							<posx>0r</posx>
							<posy>3</posy>
							<width min="1" max="300">auto</width>
							<align>right</align>
							<label>$INFO[VideoPlayer.Rating]</label>
							<font>list3</font>
							<textcolor>Gray</textcolor>
							<shadowcolor>Shadow</shadowcolor>
							<wrapmultiline>false</wrapmultiline>
						</control-->
						<!-- Duration -->
						<control type="label">
							<visible>!IsEmpty(VideoPlayer.DurationStr)</visible>
							<description>Duration</description>
							<posx>0r</posx>
							<posy>11</posy>
							<width min="1" max="300">auto</width>
							<align>right</align>
							<aligny>bottom</aligny>
							<!-- TODO: Localize -->
							<label>Duration: $INFO[VideoPlayer.DurationStr]</label>
							<font>list3</font>
							<textcolor>White</textcolor>
							<shadowcolor>Shadow</shadowcolor>
							<wrapmultiline>false</wrapmultiline>
						</control>
					</control>
					<!--=============================================================================================-->
					<!-- Plot outline -->
					<control type="textbox" id="8">
						<visible>!IsEmpty(VideoPlayer.PlotOutline)</visible>
						<posx>188</posx>
						<posy>75</posy>
						<width>909</width>
						<height>72</height>
						<align>justify</align>
						<aligny>top</aligny>
						<label>$INFO[VideoPlayer.PlotOutline]</label>
						<textcolor>Gray</textcolor>
						<shadowcolor>Shadow</shadowcolor>
						<font>plot1</font>
						<autoscroll delay="10000" time="3000" repeat="10000"/>
					</control>
					<control type="textbox" id="8">
						<visible>IsEmpty(VideoPlayer.PlotOutline)</visible>
						<posx>188</posx>
						<posy>75</posy>
						<width>909</width>
						<height>72</height>
						<align>justify</align>
						<aligny>top</aligny>
						<label>$INFO[VideoPlayer.Plot]</label>
						<textcolor>Gray</textcolor>
						<shadowcolor>Shadow</shadowcolor>
						<font>plot1</font>
						<autoscroll delay="10000" time="3000" repeat="10000"/>
					</control>
					<!--=============================================================================================-->
					<control type="group">
						<posx>188</posx>
						<posy>159</posy>
						<height>18</height>
						<width>906</width>
						<control type="group">
							<!-- Total Episodes -->
							<control type="label">
								<visible>[VideoPlayer.Content(tvshows) | VideoPlayer.Content(seasons)]</visible>
								<description>Total Watched / Unwatched Episodes</description>
								<posx>0</posx>
								<posy>0</posy>
								<width min="1" max="300">auto</width>
								<align>Left</align>
								<aligny>bottom</aligny>
								<!-- TODO: Localize -->
								<label>$INFO[VideoPlayer.Episode] $LOCALIZE[31002] ($INFO[VideoPlayer.Property(UnWatchedEpisodes)] $LOCALIZE[31012])</label>
								<font>list3</font>
								<textcolor>DarkGray</textcolor>
								<shadowcolor>Shadow</shadowcolor>
								<wrapmultiline>false</wrapmultiline>
							</control>
							<!-- Progress bar -->
							<control type="grouplist">
								<width>908</width>
								<orientation>horizontal</orientation>
								<itemgap>0</itemgap>
								<control type="label">
									<width>69</width>
									<height>16</height>
									<align>left</align>
									<aligny>center</aligny>
									<label>$INFO[Player.Time]</label>
									<textcolor>Gray</textcolor>
									<shadowcolor>Shadow</shadowcolor>
									<font>list3</font>
									<visible>true</visible>
								</control>
								<control type="progress">
									<description>Progressbar</description>
									<width>771</width>
									<height>16</height>
									<align>center</align>
									<aligny>bottom</aligny>
									<info>Player.Progress</info>
									<visible>true</visible>
								</control>
								<control type="label">
									<posx>0r</posx>
									<width>69</width>
									<height>16</height>
									<align>right</align>
									<aligny>center</aligny>
									<label>$INFO[Player.TimeRemaining]</label>
									<textcolor>Gray</textcolor>
									<shadowcolor>Shadow</shadowcolor>
									<font>list3</font>
									<visible>true</visible>
								</control>
							</control>
						</control>
					</control>
				</control>
			</control>
		</control>
		<include>DevMode</include>
	</include>
</includes>
